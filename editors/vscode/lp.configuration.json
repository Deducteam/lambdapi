{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "begin\\s*$",
        "decreaseIndentPattern": "(?<!begin.*)(end|admitted|abort)\\s*;(?!.*begin)"
    }
}
